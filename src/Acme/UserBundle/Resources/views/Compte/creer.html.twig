{% extends "UserBundle::layout.html.twig" %}

{% block title %}Gitlin - Compte Bancaire{% endblock %}
{% block contenu %}
	<div class="container">
		<div class="col-md-4 col-md-offset-4">
			<div class="panel panel-default container-block">
				<div class="panel-heading"><span class="glyphicon glyphicon-plus"></span>&nbsp;Creation d'un nouveau compte bancaire</div>
				<form name="acme_userbundle_comptetype aaa" method="post" action="">
					<div id="acme_userbundle_comptetype">
						<div class="panel-body">
							<div class="input-group">
								<span class="input-group-addon"><span class="glyphicon glyphicon-font"></span></span>
								{{ form_widget(form.nom) }}
							</div><br />
							<div class="input-group">
								<span class="input-group-addon"><span class="glyphicon glyphicon-font"></span></span>
								{{ form_widget(form.numeroCompte) }}
							</div>
						</div>
						<div class="panel-footer">
							<div>
								<button type="submit" id="acme_userbundle_comptetype_save" name="acme_userbundle_comptetype[save]" value="Enregistrer" class="btn btn-default">Enregistrer</button>
							</div>
						</div>
						{{ form_row(form._token) }}
					</div>
				</form>
			</div>
		</div>
	</div>
{% endblock %}