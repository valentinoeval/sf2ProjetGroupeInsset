{% extends "UserBundle::layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}
	{% if error %}
		<div>{{ error|trans }}</div>
	{% endif %}
	<div class="container">
		<div class="row">
			<div class="col-md-4 col-md-offset-4 container-block margin-top">
				<img src="{{ asset('bundles/user/img/logo.png') }}" id="logo" />
				<h1>Login</h1><br />
				<form action="{{ path("fos_user_security_check") }}" method="post">
					<input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
					<div class="input-group">
						<span class="input-group-addon"><span class="glyphicon glyphicon-user"></span></span>
						<input type="text" id="username" class="form-control" name="_username" value="{{ last_username }}" required="required" placeholder="Nom d'utilisateur"/>
					</div><br />
					<div class="input-group">
						<span class="input-group-addon"><span class="glyphicon glyphicon-lock"></span></span>
						<input type="password" id="password" class="form-control" name="_password" required="required" placeholder="Mot de passe" /><br />
					</div><br />
					<input type="checkbox" id="remember_me" name="_remember_me" value="on" />
					<label for="remember_me">{{ 'Se souvenir de moi? '|trans }}</label><br /><br />
					<input type="submit" id="_submit" class="btn btn-default btn-submit" name="_submit" value="{{ 'Connexion'|trans }}" />
				</form>
				<br />
			</div>
		</div>
	</div>
{% endblock fos_user_content %}